{
  "name": "@susisu/eslint-plugin-safe-typescript",
  "version": "0.2.1",
  "description": "ESLint plugin that makes your TypeScript code safer",
  "repository": "https://github.com/susisu/eslint-plugin-safe-typescript.git",
  "author": "Susisu <susisu2413@yahoo.co.jp>",
  "license": "MIT",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "lint": "run-s lint:eslint lint:prettier",
    "lint-fix": "run-s lint-fix:eslint lint-fix:prettier",
    "lint:eslint": "eslint '*.js' src",
    "lint-fix:eslint": "eslint --fix '*.js' src",
    "lint:prettier": "prettier --check '*.js' src",
    "lint-fix:prettier": "prettier --write '*.js' src",
    "test": "jest",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build": "tsc --build tsconfig.build.json",
    "clean": "run-s clean:build clean:rm",
    "clean:build": "tsc --build tsconfig.build.json --clean",
    "clean:rm": "rimraf lib",
    "prepublishOnly": "run-s clean lint test build"
  },
  "dependencies": {
    "@typescript-eslint/utils": "^5.15.0"
  },
  "peerDependencies": {
    "@typescript-eslint/parser": ">=5.0.0",
    "typescript": "*"
  },
  "devDependencies": {
    "@susisu/eslint-config": "^0.0.48",
    "@types/common-tags": "^1.8.1",
    "@types/jest": "^27.4.1",
    "@typescript-eslint/parser": "^5.15.0",
    "common-tags": "^1.8.2",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.1.2",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "jest": "^27.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.0",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  }
}
