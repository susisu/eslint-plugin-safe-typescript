{
  "name": "@susisu/eslint-plugin-safe-typescript",
  "version": "0.4.1",
  "description": "ESLint plugin that makes your TypeScript code safer",
  "repository": "https://github.com/susisu/eslint-plugin-safe-typescript.git",
  "author": "Susisu <susisu2413@yahoo.co.jp>",
  "license": "MIT",
  "type": "module",
  "main": "lib/index.js",
  "files": [
    "lib",
    "src",
    "!src/**/*.{test,spec}.{ts,tsx}",
    "!src/**/__tests__"
  ],
  "scripts": {
    "format": "prettier --write '*.js' src",
    "format:check": "prettier --check '*.js' src",
    "lint": "eslint --fix '*.js' src",
    "lint:check": "eslint '*.js' src",
    "test": "vitest run --coverage",
    "test:dev": "vitest dev --coverage.enabled --coverage.reporter=text",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build": "tsc --build tsconfig.build.json",
    "clean": "run-s clean:build clean:rm",
    "clean:build": "tsc --build tsconfig.build.json --clean",
    "clean:rm": "rimraf lib",
    "prepublishOnly": "run-s clean format:check lint:check test build"
  },
  "dependencies": {
    "@typescript-eslint/utils": "^6.13.1"
  },
  "peerDependencies": {
    "@typescript-eslint/parser": ">=6.0.0",
    "typescript": "*"
  },
  "devDependencies": {
    "@susisu/eslint-config": "^0.0.71",
    "@types/common-tags": "^1.8.4",
    "@types/node": "^20.10.2",
    "@typescript-eslint/parser": "^6.13.1",
    "@typescript-eslint/rule-tester": "^6.13.1",
    "@vitest/coverage-v8": "^0.34.6",
    "common-tags": "^1.8.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-eslint-plugin": "^5.1.1",
    "eslint-plugin-vitest": "^0.3.10",
    "globals": "^13.23.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "typescript": "~5.3.2",
    "vitest": "^0.34.6"
  }
}
