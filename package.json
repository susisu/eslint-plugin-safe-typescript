{
  "name": "@susisu/eslint-plugin-safe-typescript",
  "version": "0.3.1",
  "description": "ESLint plugin that makes your TypeScript code safer",
  "repository": "https://github.com/susisu/eslint-plugin-safe-typescript.git",
  "author": "Susisu <susisu2413@yahoo.co.jp>",
  "license": "MIT",
  "main": "lib/index.js",
  "files": [
    "lib",
    "src",
    "!src/**/*.{test,spec}.{ts,tsx}",
    "!src/**/__tests__"
  ],
  "scripts": {
    "lint": "wireit",
    "lint-fix": "wireit",
    "lint:eslint": "wireit",
    "lint-fix:eslint": "wireit",
    "lint:prettier": "wireit",
    "lint-fix:prettier": "wireit",
    "test": "wireit",
    "typecheck": "wireit",
    "build": "wireit",
    "prepublishOnly": "wireit"
  },
  "wireit": {
    "lint": {
      "dependencies": [
        "lint:eslint",
        "lint:prettier"
      ]
    },
    "lint-fix": {
      "dependencies": [
        "lint-fix:eslint",
        "lint-fix:prettier"
      ]
    },
    "lint:eslint": {
      "command": "eslint --color --cache '*.js' src",
      "files": [
        ".eslintrc.js",
        ".eslintignore",
        "tsconfig.json",
        "*.js",
        "src/**/*.{ts,tsx}"
      ],
      "output": [],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "lint-fix:eslint": {
      "command": "eslint --color --cache --fix '*.js' src",
      "files": [
        ".eslintrc.js",
        ".eslintignore",
        "tsconfig.json",
        "*.js",
        "src/**/*.{ts,tsx}"
      ],
      "output": [],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "lint:prettier": {
      "dependencies": [
        "lint:eslint"
      ],
      "command": "prettier --check '*.js' src",
      "files": [
        ".prettierrc.js",
        ".prettierignore",
        "*.js",
        "src/**/*.{ts,tsx}"
      ],
      "output": [],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "lint-fix:prettier": {
      "dependencies": [
        "lint-fix:eslint"
      ],
      "command": "prettier --write '*.js' src",
      "files": [
        ".prettierrc.js",
        ".prettierignore",
        "*.js",
        "src/**/*.{ts,tsx}"
      ],
      "output": [],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "test": {
      "command": "jest --color",
      "files": [
        "tsconfig.json",
        "tsconfig.test.json",
        "src/**/*.{ts,tsx}"
      ],
      "output": [
        "coverage/**/*"
      ],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "typecheck": {
      "command": "tsc -p tsconfig.json --noEmit --pretty",
      "clean": "if-file-deleted",
      "files": [
        "tsconfig.json",
        "tsconfig.test.json",
        "src/**/*.{ts,tsx}"
      ],
      "output": [],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "build": {
      "command": "tsc --build tsconfig.build.json --pretty",
      "clean": "if-file-deleted",
      "files": [
        "tsconfig.json",
        "tsconfig.build.json",
        "src/**/*.{ts,tsx}",
        "!src/**/*.{test,spec}.{ts,tsx}",
        "!src/**/__tests__"
      ],
      "output": [
        "lib/**/*",
        "tsconfig.build.tsbuildinfo"
      ],
      "packageLocks": [
        "yarn.lock"
      ]
    },
    "prepublishOnly": {
      "dependencies": [
        "lint",
        "test",
        "build"
      ]
    }
  },
  "dependencies": {
    "@typescript-eslint/utils": "^5.33.0"
  },
  "peerDependencies": {
    "@typescript-eslint/parser": ">=5.0.0",
    "typescript": "*"
  },
  "devDependencies": {
    "@susisu/eslint-config": "^0.0.52",
    "@types/common-tags": "^1.8.1",
    "@types/jest": "^28.1.6",
    "@typescript-eslint/parser": "^5.33.0",
    "common-tags": "^1.8.2",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-plugin": "^5.0.2",
    "eslint-plugin-jest": "^26.8.2",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "jest": "^28.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4",
    "wireit": "^0.7.1"
  }
}
