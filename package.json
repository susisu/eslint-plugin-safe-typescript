{
  "name": "@susisu/eslint-plugin-safe-typescript",
  "version": "0.10.1",
  "description": "ESLint plugin that makes your TypeScript code safer",
  "repository": "https://github.com/susisu/eslint-plugin-safe-typescript.git",
  "author": "Susisu <susisu2413@yahoo.co.jp>",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "files": [
    "lib",
    "src",
    "!src/**/*.{test,spec}.{ts,tsx}",
    "!src/**/__tests__"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/index.d.ts",
        "default": "./lib/index.js"
      }
    }
  },
  "scripts": {
    "format": "prettier --write '*.js' src",
    "format:check": "prettier --check '*.js' src",
    "lint": "eslint --fix '*.js' src",
    "lint:check": "eslint '*.js' src",
    "test": "vitest run --coverage",
    "test:dev": "vitest dev --coverage.enabled --coverage.reporter=text",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build": "tsc --build tsconfig.build.json",
    "clean": "run-s clean:tsc clean:rm",
    "clean:tsc": "tsc --build tsconfig.build.json --clean",
    "clean:rm": "rimraf lib",
    "prepublishOnly": "run-s clean format:check lint:check typecheck test build"
  },
  "dependencies": {
    "@typescript-eslint/utils": "^8.44.0"
  },
  "peerDependencies": {
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.10.0",
    "typescript": "*",
    "typescript-eslint": "^8.0.0"
  },
  "peerDependenciesMeta": {
    "@typescript-eslint/parser": {
      "optional": true
    },
    "typescript-eslint": {
      "optional": true
    }
  },
  "devDependencies": {
    "@qnighy/dedent": "^0.1.1",
    "@susisu/eslint-config": "^0.0.99",
    "@types/node": "^24.5.2",
    "@typescript-eslint/parser": "^8.44.0",
    "@typescript-eslint/rule-tester": "^8.44.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.3.12",
    "eslint": "^9.36.0",
    "eslint-plugin-eslint-plugin": "^7.0.0",
    "globals": "^16.4.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "~5.9.2",
    "vitest": "^3.2.4"
  }
}
