{
  "name": "@susisu/eslint-plugin-safe-typescript",
  "version": "0.6.1",
  "description": "ESLint plugin that makes your TypeScript code safer",
  "repository": "https://github.com/susisu/eslint-plugin-safe-typescript.git",
  "author": "Susisu <susisu2413@yahoo.co.jp>",
  "license": "MIT",
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "default": "./lib/index.js",
        "types": "./lib/index.d.ts"
      },
      "require": {
        "default": "./lib/index.cjs",
        "types": "./lib/index.d.cts"
      }
    }
  },
  "files": [
    "lib",
    "src",
    "!src/**/*.{test,spec}.{ts,tsx}",
    "!src/**/__tests__"
  ],
  "scripts": {
    "format": "prettier --write '*.js' src",
    "format:check": "prettier --check '*.js' src",
    "lint": "eslint --fix '*.js' src",
    "lint:check": "eslint '*.js' src",
    "test": "vitest run --coverage",
    "test:dev": "vitest dev --coverage.enabled --coverage.reporter=text",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build": "tsup",
    "prepublishOnly": "run-s format:check lint:check typecheck test build"
  },
  "dependencies": {
    "@typescript-eslint/utils": "^7.0.1",
    "eslint-define-config": "^2.1.0"
  },
  "peerDependencies": {
    "@typescript-eslint/parser": "^7.0.0",
    "typescript": "*",
    "typescript-eslint": "^7.0.0"
  },
  "peerDependenciesMeta": {
    "@typescript-eslint/parser": {
      "optional": true
    },
    "typescript-eslint": {
      "optional": true
    }
  },
  "devDependencies": {
    "@qnighy/dedent": "^0.1.1",
    "@susisu/eslint-config": "^0.0.78",
    "@types/node": "^20.11.17",
    "@typescript-eslint/parser": "^7.0.1",
    "@typescript-eslint/rule-tester": "^7.0.1",
    "@vitest/coverage-v8": "^1.2.2",
    "eslint": "^8.56.0",
    "eslint-plugin-eslint-plugin": "^5.3.0",
    "eslint-plugin-vitest": "^0.3.22",
    "globals": "^14.0.0",
    "npm-run-all2": "^6.1.2",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "typescript": "~5.3.3",
    "vitest": "^1.2.2"
  }
}
