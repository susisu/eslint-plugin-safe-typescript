{
  "name": "@susisu/eslint-plugin-safe-typescript",
  "version": "0.5.2",
  "description": "ESLint plugin that makes your TypeScript code safer",
  "repository": "https://github.com/susisu/eslint-plugin-safe-typescript.git",
  "author": "Susisu <susisu2413@yahoo.co.jp>",
  "license": "MIT",
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "default": "./lib/index.js",
        "types": "./lib/index.d.ts"
      },
      "require": {
        "default": "./lib/index.cjs",
        "types": "./lib/index.d.cts"
      }
    }
  },
  "files": [
    "lib",
    "src",
    "!src/**/*.{test,spec}.{ts,tsx}",
    "!src/**/__tests__"
  ],
  "scripts": {
    "format": "prettier --write '*.js' src",
    "format:check": "prettier --check '*.js' src",
    "lint": "eslint --fix '*.js' src",
    "lint:check": "eslint '*.js' src",
    "test": "vitest run --coverage",
    "test:dev": "vitest dev --coverage.enabled --coverage.reporter=text",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build": "tsup",
    "prepublishOnly": "run-s format:check lint:check typecheck test build"
  },
  "dependencies": {
    "@typescript-eslint/utils": "^6.13.1"
  },
  "peerDependencies": {
    "@typescript-eslint/parser": ">=6.0.0",
    "typescript": "*"
  },
  "devDependencies": {
    "@qnighy/dedent": "^0.1.1",
    "@susisu/eslint-config": "^0.0.72",
    "@types/node": "^20.10.2",
    "@typescript-eslint/parser": "^6.13.1",
    "@typescript-eslint/rule-tester": "^6.13.1",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-eslint-plugin": "^5.1.1",
    "eslint-plugin-vitest": "^0.3.10",
    "globals": "^13.23.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "tsup": "^8.0.1",
    "typescript": "~5.3.2",
    "vitest": "^0.34.6"
  }
}
