{
  "compilerOptions": {
    "types": ["vitest/globals"],
    "rootDir": "src",
    "outDir": "lib",
    "incremental": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "lib": ["esnext"],
    "jsx": "react-jsx",
    "strict": true,
    "noImplicitOverride": true,
    "sourceMap": true,
    // See https://github.com/typescript-eslint/typescript-eslint/issues/5032
    "declaration": false,
    "declarationMap": false
  },
  "include": [
    "src/**/*"
  ]
}
